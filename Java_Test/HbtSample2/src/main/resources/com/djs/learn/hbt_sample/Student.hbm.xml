<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.djs.test.hbt_sample.Student" table="student"
		catalog="hibernate">
		<id name="id" column="ID" type="java.lang.Integer">
			<generator class="native" />
		</id>
		<property name="name" type="string" column="Name" length="20"
			not-null="true" />
		<property name="sex" type="string" column="Sex" length="1"
			not-null="true" />
		<property name="age" type="int" column="Age" not-null="true" />
		<property name="score" type="int" column="Score" not-null="true" />
		<many-to-one name="course" column="CourseId" not-null="true"
			class="com.djs.test.hbt_sample.Course" cascade="save-update" />
	</class>
</hibernate-mapping>

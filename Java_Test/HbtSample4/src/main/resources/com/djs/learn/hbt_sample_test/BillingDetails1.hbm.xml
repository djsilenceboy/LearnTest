<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.djs.learn.hbt_sample_test">
	<class name="BillingDetails1" table="BILLING_DETAILS_1">
		<id name="id" column="BILLING_DETAILS_ID" type="long">
			<generator class="native" />
		</id>
		<discriminator column="BILLING_DETAILS_TYPE" type="string"
			length="2" not-null="true" />
		<property name="owner" column="OWNER" type="string" length="20"
			not-null="true" />
		<subclass name="CreditCard1"
			discriminator-value="CC">
			<property name="number" column="CC_NUMBER" type="string"
				length="30" not-null="true" />
			<property name="expDate" column="CC_EXP_DATE" type="date"
				not-null="true" />
		</subclass>
		<subclass name="BankAccount1"
			discriminator-value="BA">
			<property name="account" column="BA_ACCOUNT" type="string"
				length="20" not-null="true" />
			<property name="bankName" column="BA_BANK_NAME" type="string"
				length="30" not-null="true" />
		</subclass>
	</class>
</hibernate-mapping>

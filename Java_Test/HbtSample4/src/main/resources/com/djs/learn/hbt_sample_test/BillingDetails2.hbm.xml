<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.djs.learn.hbt_sample_test">
	<class name="BillingDetails2" table="BILLING_DETAILS_2">
		<id name="id" column="ID" type="long">
			<generator class="native" />
		</id>
		<property name="owner" column="OWNER" type="string" length="20"
			not-null="true" />
		<joined-subclass name="CreditCard2"
			table="CREDIT_CARD_2">
			<key column="ID" />
			<property name="number" column="NUMBER" type="string"
				length="30" not-null="true" />
			<property name="expDate" column="EXP_DATE" type="date"
				not-null="true" />
		</joined-subclass>
		<joined-subclass name="BankAccount2"
			table="BANK_ACCOUNT_2">
			<key column="ID" />
			<property name="account" column="ACCOUNT" type="string"
				length="20" not-null="true" />
			<property name="bankName" column="BANK_NAME" type="string"
				length="30" not-null="true" />
		</joined-subclass>
	</class>
</hibernate-mapping>

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.djs.test.hbt_sample_test">
	<class name="BillingDetails3" abstract="true">
		<id name="id" column="BILLING_DETAILS_ID" type="long">
			<generator class="native" />
		</id>
		<property name="owner" column="OWNER" type="string" length="20"
			not-null="true" />
		<union-subclass name="CreditCard3"
			table="CREDIT_CARD_3">
			<property name="number" column="NUMBER" type="string"
				length="30" not-null="true" />
			<property name="expDate" column="EXP_DATE" type="date"
				not-null="true" />
		</union-subclass>
		<union-subclass name="BankAccount3"
			table="BANK_ACCOUNT_3">
			<property name="account" column="ACCOUNT" type="string"
				length="20" not-null="true" />
			<property name="bankName" column="BANK_NAME" type="string"
				length="30" not-null="true" />
		</union-subclass>
	</class>
</hibernate-mapping>
